<% content_for :page_view, render_page_view(__FILE__) %>
<% content_for :page_title, t('.title') %>
<% content_for :page_description, t('.description') %>
<%= form_for @user, url: user_update_memorable_word_path, local: true do |f| %>
  <%= form_errors_for @user %>
  <%= f.text_field :memorable_question %>
  <%= f.text_field :memorable_answer %>
  <%= f.password_field :password, {translation_options: :memorable_word}, {autocomplete: "current-password"}  %>
  <%= f.button 'submit'%>
<% end %>
