<% if current_user.check_password_expired? %>
  <% content_for(:page_title, t('.title_expired_password')) %>
  <%= ds_paragraph {t('.description')} %>
<% else %>
  <% content_for(:page_title, t('.title')) %>
<% end %>
<%= ds_form_with(model: @user, url: user_update_password_path, button_action: :change_password) do |f| %>
  <%= f.ds_text_field(method: :username, disabled: true) %>
  <%= f.ds_password_field(method: :old_password, autocomplete: "current-password") %>
  <%= f.ds_password_field(method: :new_password, autocomplete: "new-password") %>
  <%= f.ds_password_field(method: :new_password_confirmation, autocomplete: "new-password") %>
<% end %>
