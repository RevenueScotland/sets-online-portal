<%= ds_form_with(model: @user, button_action: :submit ) do |f| %>
  <% if @user.new_record? %>
    <%= f.ds_text_field(method: :new_username) %>
  <% else %>
    <%= f.ds_text_field(method: :username, disabled: true) %>
  <% end %>
  <%= f.ds_radio_group(builder: f.builder, method: :user_is_current,
                    options_list:@user.list_ref_data(:user_is_current), alignment: :horizontal ) %>
  <%= f.ds_section_title(section_title: t('.user_details')) %>
  <%= f.ds_text_field( method: :forename) %>
  <%= f.ds_text_field( method: :surname) %>
  <%= f.ds_section_title(section_title: t('.contact_details')) %>
  <%= f.ds_text_field( method: :email_address) %>
  <%= f.ds_text_field( method: :email_address_confirmation) %>
  <%= f.ds_text_field( method: :phone_number,optional: true) %>
  <%= f.ds_password_field( method: :new_password, optional: !@user.new_record? )%>
  <%= f.ds_password_field( method: :new_password_confirmation, optional: !@user.new_record?)%>
  <%= f.ds_checkbox_group( method: :user_roles, options_list:@user.list_ref_data(:user_roles)) %>
<% end %>
