<% content_for(:page_title, t('.title')) %>
<%= ds_section_title(section_title: t('.section_title')) %>
<%= ds_form_with(model: @account, url: @post_path) do |f| %>
  <%= f.ds_fields_for(@account.company) do |c| %>
    <%= c.ds_email_field(method: :org_email_address) %>
    <%= c.ds_text_field(method: :org_telephone) %>
    <%= c.ds_text_field(method: :main_rep_name) %>
  <% end %>
  <% if AccountType.other_organisation?(@account.account_type) %>
    <%= f.ds_text_field(method: :nino) %>
  <% end %>
<% end %>
