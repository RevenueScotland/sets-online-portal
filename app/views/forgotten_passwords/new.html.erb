<% content_for(:page_title, t('.title')) %>
<% content_for(:navigation_link, :clear_stack) %>
<%= ds_paragraph {t('.description')} %>
<%= ds_form_with(model: @forgotten_password, url: forgotten_password_path, button_action: :change_password) do |f| %>
  <%= f.ds_text_field(method: :email_address,autocomplete: "email") %>
  <%# We don't use autocomplete on the username field as chromium based browsers populate it with the email when the email field is populated %>
  <%= f.ds_text_field(method: :username) %>
  <%= f.ds_password_field(method: :new_password, autocomplete: "new-password") %>
  <%= f.ds_password_field(method: :new_password_confirmation, autocomplete: "new-password") %>
<% end %>
