<% content_for :hide_back_link, true %>
<% content_for :page_title, t('.title') %>
<% content_for :page_description, t('.description') %>
<% content_for :page_view, render_page_view(__FILE__) %>
<%= form_for @forgotten_password, url: forgotten_password_path, local: true do |f| %>
  <%= form_errors_for @forgotten_password %>
  <%= f.text_field :email_address, {}, {autocomplete: "email"} %>
  <%# We don't use autocomplete on the username field as chromium based browsers populate it with the email when the email field is populated %>
  <%= f.text_field :username %>
  <%= f.password_field :new_password, {}, {autocomplete: "new-password"} %>
  <%= f.password_field :new_password_confirmation, {}, {autocomplete: "new-password"} %>
  <%= f.button '.change_password' %>
<% end %>
