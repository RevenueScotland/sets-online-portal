<% content_for :page_title, t('returns.lbtt_ads.title') %>
<% content_for :page_subtitle, t('.subtitle') %>
<% content_for :page_view, render_page_view(__FILE__) %>

<%= form_for @tax, url: @post_path, method: :post, local: true do |f| %>
  <%= form_errors_for @tax %>

  <%= f.currency_field(:ads_due, readonly:true, translation_options: :original, id: 'original_ads_paid') %>
  <%= f.currency_field :ads_repay_amount_claimed %>

  <%= f.button 'next', { :name => 'submitted' } %>
<% end %>