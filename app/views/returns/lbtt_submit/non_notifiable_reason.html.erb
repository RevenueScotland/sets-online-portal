<% content_for(:page_title, t('.title')) %>
<%= ds_paragraph{ @lbtt_return.non_notifiable_reasons.join('<br />').html_safe} %>
<%= ds_paragraph{t('.non_notifiable_return_html',
link: ds_link(url: external_link_url(@lbtt_return.convey? ? 'CONV_NON_NOTIF' : 'NON_NOTIF'), name: @lbtt_return.convey? ? t('.non_notifiable_convey_return_link') : t('.non_notifiable_return_link'), target: '_blank'  ))} %>
<%= ds_paragraph{t((current_user ? ('.go_back_auth_html') : ('.go_back_html')),
  link: ds_link(url: returns_lbtt_summary_path, name: t('.go_back_link')))} %>
<%= ds_form_with(model: @lbtt_return, url: @post_path, method: :post, button_label: t('.submit_return')) do |f| %>
  <%= f.ds_text_area(method: :non_notifiable_explanation) %>
<% end %>
