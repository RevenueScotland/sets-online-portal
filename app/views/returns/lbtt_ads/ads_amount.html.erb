<% content_for(:page_title, t('.title')) %>
<%= ds_paragraph{t('.description')} %>
<%= ds_form_with(model: @ads, url: @post_path, method: :post) do |f| %>
  <%= f.ds_currency(method: :ads_amount_liable,
                                        interpolations: { link: ds_link(name: t('.ads_amount_liable_link'),
                                         url: external_link_url('ADS_CHARGE_CONS'), target: '_blank') }) %>
  <%= f.ds_currency(method: :ads_consideration) if @ads.ads_consideration_yes_no == 'Y' %>
<% end %>
