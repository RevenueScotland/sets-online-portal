<% content_for(:page_title, t('.title' , waste: @waste.ewc_code, site_name: @waste.site_name ) ) %>
<%= ds_section_title(section_title: t('.subtitle')) %>
<%= ds_form_with(model: @waste, url: @post_path, method: :post) do |f| %>
  <%= f.ds_text_field( method: :standard_tonnage, width:20) %>
  <%= f.ds_text_field( method: :lower_tonnage, width:20) %>
  <%= f.ds_text_field( method: :exempt_tonnage, width:20) %>
  <%= f.ds_text_field( method: :water_tonnage, width:20) %>
<% end %>
