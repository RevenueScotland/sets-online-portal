<% content_for(:page_title, t('.title')) %>
<%= ds_section_title(section_title: t('.section_title')) %>
<%= ds_paragraph {t('.description')} %>
<%= ds_form_with(model: @agent, url: returns_lbtt_agent_details_path, method: :post, action_name: :confirm, autocomplete: true) do |f| %>
  <%= f.ds_select(method: :title, select_options: @agent.list_ref_data(:title), width: 10, optional: true) %>
  <%= f.ds_text_field(method: :firstname, autocomplete: 'given-name') %>
  <%= f.ds_text_field(method: :surname, autocomplete: 'family-name') %>
  <%= f.ds_text_field(method: :agent_reference, optional: true) %>
  <%= f.ds_text_field(method: :agent_dx_number, optional: true) %>
  <%= f.ds_text_field(method: :telephone, autocomplete: 'tel') %>
  <%= f.ds_text_field(method: :email_address, autocomplete: 'email') %>
<% end %>
