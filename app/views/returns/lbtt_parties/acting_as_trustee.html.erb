<% content_for :page_view, render_page_view(__FILE__) %>
<%= form_for @party, url: @post_path, method: :post, local: true do |f| %>
  <% content_for :page_title, t('.'+@party.party_type+ '_title') %>
  <%= form_errors_for @party %>
  <%= f.collection_radio_buttons_fields(:is_acting_as_trustee, @party.list_ref_data(:is_acting_as_trustee),
                                        text_link: { t('.is_acting_as_trustee_partnership') =>
                                                    link_to(t('.is_acting_as_trustee_partnership'), "#{Rails.configuration.x.external_links.lbtt7001_partnerships}", target: '_blank'),
                                                     t('.is_acting_as_trustee_trust') =>
                                                    link_to(t('.is_acting_as_trustee_trust'), "#{Rails.configuration.x.external_links.lbtt8001_trusts}", target: '_blank')}) %>
  <%= f.button 'next', { :name => 'submitted' }  %>
<% end %>