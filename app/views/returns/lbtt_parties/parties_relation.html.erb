<% content_for(:page_title, t('.'+@party.party_type+ '_title')) %>
<%= ds_form_with(model: @party, url: @post_path, method: :post) do |f| %>
  <%= rs_conditional_visibility(visible_value: "Y") do |c| %>
    <% c.with_visibility_control_radio_group(builder: f.builder, method: :buyer_seller_linked_ind, 
    options_list: @party.list_ref_data(:buyer_seller_linked_ind), alignment: :horizontal,
    interpolations: {link: ds_link(url: external_link_url('BUYER_SELLER'), name: t('.buyer_seller_linked_ind'), target: '_blank') }) %>
    <%= f.ds_text_field(method: :buyer_seller_linked_desc) %>
  <% end %>
<% end %>
