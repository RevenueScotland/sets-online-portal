<% content_for(:page_title, t('.title')) %>
<%= ds_form_with(model: @lbtt_return, url: @post_path, method: :post) do |f| %>
  <%= f.ds_radio_group(method: :previous_option_ind, options_list: @lbtt_return.list_ref_data(:previous_option_ind),
                       interpolations: { link: ds_link(name: t('.previous_option_ind_link'), url: external_link_url('PRE_EXEMPTION'),
                        target: '_blank')}, alignment: :horizontal) %>
  <%= f.ds_radio_group(method: :exchange_ind, options_list: @lbtt_return.list_ref_data(:exchange_ind), alignment: :horizontal) %>
  <%= f.ds_radio_group(method: :uk_ind, options_list: @lbtt_return.list_ref_data(:uk_ind), alignment: :horizontal) %>
<% end %>
