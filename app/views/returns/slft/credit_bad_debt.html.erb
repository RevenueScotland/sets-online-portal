<% content_for :page_title, t('.title') %>
<% content_for :page_subtitle, t('.subtitle') %>
<% content_for :page_view, render_page_view(__FILE__) %>

<%= form_for @slft_return, url: @post_path, method: :post, local: true do |f| %>
  <%= form_errors_for @slft_return %>
  <%= f.collection_radio_buttons_fields(:bad_debt_yes_no, @slft_return.list_ref_data(:bad_debt_yes_no)) %>
  <div id='hideable'>
    <%= f.currency_field :bad_debt_credit %>
  </div>
  <%= f.button 'next', { :name => 'submitted' }  %>
<% end %>