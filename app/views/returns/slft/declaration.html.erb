<% content_for :page_title, t('.title') %>
<% content_for :page_view, render_page_view(__FILE__) %>

<%= form_for @slft_return, url: @post_path, method: :post, local: true do |f| %>
  <%= form_errors_for @slft_return %>
  <%= f.collection_radio_buttons_fields(:fpay_method, @slft_return.list_payment_types, :code, :value, alignment: 'vertical') %>
  <%= govuk_warning( t('.warning') ) %>
  <%= f.check_box_field(:declaration) %>
  <br/>
  <%= f.submit 'submit_return', { :name => 'submitted' } %>
<% end %>
