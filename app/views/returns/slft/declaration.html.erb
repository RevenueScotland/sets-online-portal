<% content_for(:page_title, t('.title')) %>
<%= ds_form_with(model: @slft_return, url: @post_path, method: :post, button_label: t('.submit_return')) do |f| %>
  <%= f.ds_radio_group(method: :fpay_method, options_list: @slft_return.list_payment_types(account_has_dd_instruction: account_has_dd_instruction?)) %>
  <% if @slft_return.dd_not_available(account_has_dd_instruction: account_has_dd_instruction?) %>
    <%= ds_paragraph{ t('.dd_not_available') } %>
  <% end %>
  <%= ds_warning{ t('.SLFT_additional_Warning') } %>
  <%= ds_warning{ t('.warning') } %>
  <%= f.ds_checkbox(method: :declaration) %>
<% end %>
