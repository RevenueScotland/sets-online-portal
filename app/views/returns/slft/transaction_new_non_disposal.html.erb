<% content_for :page_title, t('.title') %>
<% content_for :page_view, render_page_view(__FILE__) %>

<%= form_for @slft_return, url: @post_path, method: :post, local: true do |f| %>
  <%= form_errors_for @slft_return %>
  <%= f.collection_radio_buttons_fields(:non_disposal_add_ind, @slft_return.list_ref_data(:non_disposal_add_ind), :code, :value) %>
  <div id='hideable' >
    <%= f.text_area_field :non_disposal_add_text %>
  </div>
  <%= f.button 'next', { :name => 'submitted' }  %>
<% end %>