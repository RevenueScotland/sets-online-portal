<% content_for :page_title, t('.title') %>
<% content_for :page_view, render_page_view(__FILE__) %>
<%= form_for @lbtt_return, url: @post_path, :method => 'post', local: true do |f|  %>
  <%= form_errors_for @lbtt_return %>
  <%= f.table_fields(@lbtt_return, :relief_claims, exclude_add_button: true, exclude_delete_button: true) do |table_form | %>
    <!-- note we round trip the amount fields -->
    <%= table_form.hidden_field(:relief_type, display_attribute: :relief_type_description) %>
    <%= table_form.currency_field(:relief_override_amount) %>
    <%= table_form.hidden_field(:relief_amount) %>
  <% end %>
  <%= f.button %>
<% end %>
