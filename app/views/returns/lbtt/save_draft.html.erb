<% if @lbtt_return.errors.blank? %>
  <% content_for :page_title, t('.title') %>
<% else %>
  <% content_for :page_title, t('return_error') %>
<% end%>
<% content_for :page_view, render_page_view(__FILE__) %>
<%= form_for @lbtt_return, url: @post_path, method: :post, local: true do |f| %>
  <%= form_errors_for @lbtt_return %>
<% end %>
<% if @lbtt_return.errors.blank? %>
  <%= t('.information') %>
  <br>
  <b><%= t('.caution') %></b>
  <br>
  <%= t('.return_html') %>
  <b><span id= "ret_ref_val"><%= @lbtt_return.tare_reference%></span>.</b>
  <%= t('.reference_html') %>
<% end %>
<%= navigational_links( [ { link: :back_to_return_summary, path: returns_lbtt_summary_path }, 
                          { link: :go_to_dashboard, path: dashboard_path} ] ) %>
