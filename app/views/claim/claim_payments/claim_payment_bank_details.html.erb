<% content_for( :page_title, t('.title')) %>
<%= ds_paragraph{t('.' + @claim_payment.translation_prefix + '_description')} %>
<%= ds_form_with( model: @claim_payment, url: @post_path, method: :post) do |f| %>
  <%= f.ds_text_field(method: :account_holder_name, width: 20) %>
  <%= f.ds_text_field(method: :account_number, width: 20) %>
  <%= f.ds_text_field(method: :branch_code, width: 20) %>
  <%= f.ds_text_field(method: :bank_name, width: 20) %>
<% end %>
