<% content_for :page_view, render_page_view(__FILE__) %>
<% content_for :page_title, t('.title') %>
<%= form_for @claim_payment, url: @post_path, method: :post, local: true do |f| %>
  <%= form_errors_for @claim_payment %>
  <%= display_paragraph_components(heading: t('.info_needed_heading'), body: t('.info_needed_description_html')) %>
  <%# = display_paragraph_components(heading: t('.form_completion_heading'), body: t('.form_completion_description_html', ref_link: link_to(t('.ref_message'), login_path))) %>
  <%= display_paragraph_components(heading: t('.form_completion_heading'), 
                                   body:  UtilityHelper.swap_texts(t('.form_completion_description_html'), 
                                            text_link: { t('.form_completion_description_link') => 
                                              link_to(t('.form_completion_description_link'), login_path) } )) %>
  <%= f.button 'start_now', { :name => 'continue' }  %>
<% end %>
