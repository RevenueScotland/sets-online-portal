<% content_for(:page_title,  t('.title')) %>
<% content_for(:navigation_link, :clear_stack) %>
<% content_for(:notification_banner, rs_notification_banner(display_page: 'PORTAL')) %>
<%= ds_form_with(model: @user, url: login_path, button_action: :signin) do |f| %>
  <%= f.ds_text_field(method: :username, autocomplete: 'username') %>
  <%= ds_paragraph { ds_link(url: forgotten_username_path, name: t('.forgotten_your_username'))} %>
  <%= f.ds_password_field(method: :password, autocomplete: "current-password") %>
  <%= ds_paragraph { ds_link(url: forgotten_password_path, name: t('.forgotten_your_password'))} %>
  <br/>
  <%= ds_paragraph { ds_link(url: accounts_registration_taxes_path, name: t('.register_if_dont_have_account'))} %>
  <%= ds_paragraph do %>
    <%= t('.activate_account_sentence', link: ds_link(url: activate_account_account_path, name: t('.activate_account_link'))).html_safe %>
  <% end %>
<% end %>
