<% content_for(:page_title, t('.title')) %>
<%= ds_summary_list(model: @financial_transaction, show_border: false) do |s|%>
  <% s.with_item_method(method: :actual_date) %>
  <% s.with_item_method(method: :effective_date) %>
  <% s.with_item_method(method: :related_reference) %>
  <% s.with_item_method(method: :description) %>
  <% s.with_item_method(method: :amount, type: :currency) %>
  <% s.with_item_method(method: :outstanding_balance, type: :currency) %>
<% end %>
<% if @related_transactions.present? %>
  <%= rs_financial_transaction_table(financial_transactions:@related_transactions, caption: t('.caption'), 
                                   id: 'related_transaction', small_screen: 'scrolling', pagination_collection: @pagination_collection, format: :related_transaction)%>
<% end %>
