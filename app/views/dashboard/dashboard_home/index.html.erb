<% content_for(:page_title, t('.title', name: current_user.portal_account_name)) %>
<% content_for(:navigation_link, :clear_stack) %>
<% if account_has_no_service? %>
  <%= ds_warning{ t('.no_services')} %>
<% end %>
<%= rs_message_table(messages: @messages, caption: t('.unread_messages'), id: 'unread_messages',
  show_all_link: true, small_screen: 'scrolling', pagination_collection: @messages_pagination, page_name: 'message_page' ) %>
<%= rs_return_table(returns: @dashboard_returns, caption: t('.draft_returns'),
  show_link: :all_returns, id: 'draft_returns', small_screen: 'scrolling', pagination_collection: @returns_pagination,
  page_name: 'returns_page', format: :draft ) %>
<%= rs_return_table(returns: @outstanding, caption: t('.outstanding_balance'), 
  show_link: :all_transactions, id: 'outstanding_balance', small_screen: 'scrolling', pagination_collection: @outstanding_pagination,
  page_name: 'balance_page' ) %>
