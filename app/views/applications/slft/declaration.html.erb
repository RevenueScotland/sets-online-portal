<% content_for(:page_title, t('.title')) %>
<%= ds_form_with( model: @slft_application, url: @post_path, method: :post, button_action: :submit) do |f| %>
  <%= ds_warning{ t('.warning') } %>
  <% if @slft_application.application_type != 'LO-WD'%>
    <%= ds_paragraph {t('.declare')} %>
  <% end %>
  <%= f.ds_checkbox(method: :declaration) %>
  <%= f.ds_checkbox(method: :change_declaration) if @slft_application.change_declaration_required? %>
  <%= f.ds_text_field(method: :declaration_name) %>
  <%= f.ds_text_field(method: :declaration_position) %>
  <%= f.ds_text_field(method: :declaration_telephone_number) %>
  <%= f.ds_text_field(method: :declaration_email_address) %>
<% end %>
