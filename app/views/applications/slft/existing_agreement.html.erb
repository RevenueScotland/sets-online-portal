<% content_for(:page_title, t('.title_' + @slft_application.applicant_type)) %>
<%= ds_form_with( model: @slft_application, url: @post_path, method: :post) do |f| %>
  <%= rs_conditional_visibility(visible_value: "Y") do |c| %>
    <% c.with_visibility_control_radio_group(builder: f.builder, method: :existing_agreement, 
      options_list:@slft_application.list_ref_data(:existing_agreement), alignment: :horizontal) %>
    <% if @slft_application.waste_producer_water_discount? %>
      <%= f.ds_radio_group(method: :renewal_or_review, options_list: @slft_application.list_ref_data(:renewal_or_review),
                           alignment: :horizontal) %>
    <% end %>
    <%= f.ds_text_field(method: :previous_case_reference, width:20) %>
  <% end %>
<% end %>
