<% content_for(:page_title, t('.title')) %>
<%= ds_paragraph{t('.description') } %>
<%= ds_form_with(model: @site, url: @post_path) do |f| %>
    <%= f.ds_text_field(method: :sepa_license_number) %>
    <%= f.ds_text_field(method: :site_name) %>
    <% if @site.waste_producer_water_discount? %>
      <%= f.ds_text_field(method: :landfill_operator) %>
      <%= f.ds_text_field(method: :slft_registration_number) %>
    <% end %>
  <% end %>
