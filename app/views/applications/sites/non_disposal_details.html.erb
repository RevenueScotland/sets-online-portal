<% content_for :page_view, render_page_view(__FILE__) %>
<% content_for :page_title, t('.title') %>
<%= form_for @site, url: @post_path, local: true do |f| %>
  <%= form_errors_for @site %>
  <%= f.text_field :intended_use, { width: 'three-quarters' } %>
  <%= f.text_field :estimated_timescale, { width: 'three-quarters' } %>
  <%= f.text_area_field :type_of_waste_text %>
  <% f.current_browser = application_browser %>
  <%= f.date_field :start_date if @site.existing_agreement == 'N' %>
  <%= f.button %>
<% end %>