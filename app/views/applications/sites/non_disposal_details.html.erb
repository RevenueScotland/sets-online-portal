<% content_for(:page_title, t('.title')) %>
<%= ds_form_with(model: @site, url: @post_path) do |f| %>
  <%= f.ds_text_field(method: :intended_use, width: 'three-quarters') %>
  <%= f.ds_text_field(method: :estimated_timescale, width: 'three-quarters') %>
  <%= f.ds_text_area(method: :type_of_waste_text, rows: 5) %>
  <%= f.ds_date_picker(method: :start_date) if @site.existing_agreement == 'N' %>
<% end %>
