<% content_for(:page_title, t('.title')) %>
<%= ds_form_with(model: @site, url: @post_path) do |f| %>
  <%= rs_conditional_visibility(visible_value: "Y") do |c| %>
    <% c.with_visibility_control_radio_group(builder: f.builder, method: :operator_separate_mailing_address,
                                options_list: @site.list_ref_data(:operator_separate_mailing_address), alignment: :horizontal) %>
    <%= ds_address_search(address_summary: @address_summary, search_results: @search_results , address: @address_detail, 
      show_address_detail: @show_manual_address, readonly: @address_read_only) %>
  <% end %>
<% end %>
