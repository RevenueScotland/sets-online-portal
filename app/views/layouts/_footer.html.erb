<footer class="ds_site-footer">
  <div class="ds_wrapper">
    <div class="ds_site-footer__content">
      <ul class="ds_site-footer__site-items">
        <li class="ds_site-items__item">
          <%= ds_link(url: external_link_url('LEGAL_NOTICES'), name: t('.legal_notices')) %>
        </li>
        <li class="ds_site-items__item">
          <%= ds_link(url: external_link_url('FOI'), name: t('.foi') ) %>
        </li>
        <li class="ds_site-items__item">
          <%= ds_link(url: cookies_path, name: t('.cookies') ) %>
        </li>
        <li class="ds_site-items__item">
          <%= ds_link(url: external_link_url('ACCESSIBILITY'), name: t('.accessibility') ) %>
        </li>
      </ul>
      <div class="ds_site-footer__copyright">
        <a class="ds_site-footer__copyright-logo" href="http://www.nationalarchives.gov.uk/doc/open-government-licence/version/3/">
          <img src="<%= image_path("ogl.svg") %>" alt="Open Government License" />
        </a>
        <p><%=t('.content_copyright_message_html')%></p>
        <p>&copy; <%= t('.crown_copyright')%><br/>
          <%= t('.version_html', version: Rails.configuration.x.version) %></p>
      </div>
      <div class="ds_site-footer__org">
        <a class="ds_site-footer__org-link" title="<%=t('revenue_scotland')%>" href="https://revenue.scot/">
          <img class="ds_site-footer__org-logo" src="<%= image_path('logo.svg') %>" alt="<%=t('revenue_scotland')%>" loading="lazy" width="300" height="55" />
        </a>
      </div>
    </div>
  </div>
</footer>
