<header class="ds_site-header  ds_site-header--gradient" role="banner">
  <%= ds_cookie_banner(show_success: content_for(:show_cookie_success)) %>
  <%= content_for(:notification_banner) %>
  <div class="ds_wrapper">
    <div class="ds_site-header__content">
      <div class="ds_site-branding">
        <a class="ds_site-branding__logo  ds_site-branding__link" href="https://revenue.scot/">
          <img class="ds_site-branding__logo-image" src="<%= image_path('logo.svg') %>" alt="<%=t('.revenue_scotland')%>" />
        </a>
        <div class="ds_site-branding__title">
          <%= t('.service_name') %>
        </div>
      </div>
      <% unless content_for(:hide_navigation) %>
        <div class="ds_site-header__controls">
          <label aria-controls="mobile-navigation" class="ds_site-header__control  js-toggle-menu" for="menu">
            <span class="ds_site-header__control-text"><%= t('.menu') %></span>
            <svg class="ds_icon  ds_site-header__control-icon" aria-hidden="true" role="img"><use href="<%= image_path('assets/images/icons/icons.stack.svg#menu')%>"></use></svg>
            <svg class="ds_icon  ds_site-header__control-icon  ds_site-header__control-icon--active-icon" aria-hidden="true" role="img"><use href="<%= image_path('assets/images/icons/icons.stack.svg#close') %>"></use></svg>
          </label>
        </div>
        <input class="ds_site-navigation__toggle" id="menu" type="checkbox" />
        <%= rs_site_header_navigation(format: :mobile) %>
      </div>
    </div>
    <div class="ds_site-header__navigation">
      <div class="ds_wrapper">
        <%= rs_site_header_navigation(format: :website) %>
      <% end %>
    </div>
  </div>
</header>
